---
version: "{{ docker_compose_version }}"

networks:
  {{ stacks.traefik.network_name }}:
    external: true

services:
  traefik:
    networks:
      - {{ stacks.traefik.network_name }}
    image: traefik:v2.9
    container_name: traefik
    restart: unless-stopped
    command:
      - "--api.insecure=true"
      - "--providers.docker=true"
      - "--providers.docker.exposedbydefault=false"
    ports:
      - "80:80"
      - "443:443"
      - "8080:8080"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - {{ stacks.traefik.folder }}/traefik.toml:/traefik.toml
      - {{ stacks.traefik.folder }}/traefik-provider.toml:/traefik-provider.toml
      - {{ stacks.traefik.folder }}/traefik.log:/traefik.log
    labels:
      org.label-schema.group: "monitoring"
      traefik.enable: true
      traefik.http.routers.traefik.rule: "Host(`traefik.{{ inventory_hostname }}`)"
      traefik.http.services.traefik.loadbalancer.server.port: 8080
      traefik.http.routers.traefik.entrypoints: http

  whoami:
    image: traefik/whoami
    container_name: whoami
    labels:
      - "traefik.enable=true"
      - 'traefik.http.routers.whoami.rule=Host(`whoami.{{ inventory_hostname }}`)'
      - "traefik.http.routers.whoami.entrypoints=http"

